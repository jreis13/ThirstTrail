
<div class="container">
  <h1>Your Cocktail Selection</h1>
  <hr>
  <div class="small-container">
    <div class="row">
        <% @recipes.each do |recipe| %>
          <div class="col-12 col-md-6">
          <%= link_to recipe_path(recipe) do %>
            <div class="card card-recipe" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.4)), url(<%=recipe.image_url%>); background-size: cover; background-position:center;" >
              <h2 class="card-recipe-title"><%= recipe.name %></h2>
            </div>
            <% end %>
          </div>
        <%end%>
    </div>
  </div>
</div>
