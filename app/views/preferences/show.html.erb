<div class="container">
  <h2 class="team-title">Your Cocktail Selection</h2>
  <hr>
  <div class="questions-container pb-4">
    <div class="row">
        <% @recipes.each do |recipe| %>
          <div class="col-12 col-md-6">
          <%= link_to recipe_path(recipe) do %>
            <div class="card card-recipe mx-auto" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.4)), url(<%=recipe.image_url%>); background-size: cover" >
              <h2 class="card-recipe-title"><%= recipe.name %></h2>
            </div>
            <% end %>
          </div>
        <%end%>
        <div class="no-result">
          <% if @recipes.empty? %>
            <%= image_tag("cat.webp", size: "300x300", alt: "No result") %>
          <% end %>
          <p class="no-result-text">Sorry, looks like there is no such recipe!</p>
        <div class="btns-start-no-result">
        <%= link_to "Start over", new_preference_path, class: "btn btn-ghost-build" %>
      </div>
        </div>
    </div>
    <div class="preference-opt">
      <%= link_to new_preference_path do %>
        <i class="fas fa-arrow-circle-left btn-pref"></i>
      <% end %>
      <%= link_to preference_path do %>
        <i class="fas fa-redo-alt btn-pref"></i>
      <% end %>
    </div>
  </div>
</div>
