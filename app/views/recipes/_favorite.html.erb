<% if current_user.favorited?(recipe) %>
  <%= link_to favorite_recipe_path(recipe), class: "favorite-link", method: :patch, remote: true do %>
    <i class="fas fa-heart"></i>
  <% end %>
<% else %>
  <%=  link_to favorite_recipe_path(recipe), class: "favorite-link", method: :patch,remote: true do %>
    <i class="far fa-heart"></i>
   <% end %>
<% end %>
